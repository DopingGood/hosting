.slide-bar
	height 57rem
	width 100%
	background-color #222836
	
.sliders
	width 85%
	height 50rem
	margin 0 auto
	margin-top 5rem

	.slider 
		img
			width 90%
			height 35rem
			margin 0 auto 2.6rem
			padding 1rem
		
		p
			color #ffffff
			font-family OpenSans-ExtraBold
			text-align center
			font-size 3.5rem
			// font-weight 800
			line-height 0.7
		
		span
			font-size 2rem
			font-family OpenSans-Light
			// font-weight 300
		
	.slick-dots li
		width 1.1rem
		height 1.1rem
		margin 0 2px
		bottom 7rem
	
		button
			width 1.1rem
			height 1.1rem
			padding 0 

			&:before
				content ""
				width 1.1rem
				height 1.1rem
				opacity 1
				border solid 0.2rem #ff8261
				border-radius 100%
	
	.slick-dots li.slick-active button:before
		opacity 1
		border-color #5278db
	
.left-arrow
	color #ffffff
	display block
	position absolute
	border solid 1px #91949b
	border-radius 100%
	padding 1.6rem 2.4rem 1.6rem 2.4rem
	top 23rem
	left 2.4rem
	cursor pointer
	text-decoration none
	
.right-arrow
	color #ffffff
	display block
	position absolute
	border solid 1px #91949b
	border-radius 100%
	padding 1.6rem 2.4rem 1.6rem 2.4rem
	top 23rem
	right 2.4rem
	cursor pointer
	text-decoration none
	transition all 0.3s linear
	
.right-arrow:hover, .left-arrow:hover
	color #222836
	background rgba(255, 255, 255, .7)
	transition all 0.3s ease-out

.blue-bar
	width 100%
	padding 4rem 0 7rem 0
	background-color #e7f4f8
	margin-bottom 7rem
	
.blue-bar > div
	margin 0 auto
	float none
		
.domain 
	color #9baeb4
	font-size 1.9rem
	margin-bottom 0
	line-height: 1
	padding-top: 2.8rem
	float left

	img
	padding-bottom 0.5rem
	
	&:before
		content ""
		display block
		position absolute
		width 2.5rem
		height 2.5rem
		bottom 6rem
		background url(../img/lense.png) no-repeat

	span
		color #556b72
		font-size 3.1rem
		// font-weight 800
		margin 0
		font-family OpenSans-ExtraBold

.blue-bar-input
	float left
	font-family OpenSans-Regular
	color #a7b0bb
	height 5.3rem
	// width 42rem
	width 100%
	padding 0 2rem
	// margin 2.3rem 1.5rem 0 3rem
	margin-top 2.3rem
	border none
	outline none	

.blue-bar-input:focus, .blue-bar-input-bot:focus
	border 1px solid #ccc
	box-shadow inset 0 3px 5px rgba(0,0,0,.125)

/********** Selects *********/
.btn
	border 0px
	border-radius 0

.btn-group.open .dropdown-toggle
	border 1px solid #ccc

.btn-default.active, .btn-default.focus, .btn-default:active, .btn-default:focus, .btn-default:hover, .open>.dropdown-toggle.btn-default
	background-color #ffffff

.bootstrap-select:not([class*=col-]):not([class*=form-control]):not(.input-group-btn)
	width 47%
	float left
	margin 2.3rem 1.5rem 0 0

.bootstrap-select:not([class*=col-]):not([class*=form-control]):not(.input-group-btn):last-child
	margin-right 0
.bootstrap-select>.btn
	height 5.3rem

.dropdown-menu>li>a:focus, .dropdown-menu>li>a:hover
	background-color #EAEAEA

.blue-bar-search
	float right
	color #ffffff
	font-family OpenSans-Bold
	// font-weight 700
	display block
	padding: 1.9rem 5.6rem
	margin-top: 2rem
