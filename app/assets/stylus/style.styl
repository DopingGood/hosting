.quick-links-ul
	column-count 2
	column-gap 4rem
	
.quick-links h5, .contact-us h5, .social-media h5
	color #ffffff
	font-family OpenSans-ExtraBold
	// font-weight 800
	padding-bottom 1rem
	
.quick-links a:hover, .social-media a:hover
	color #ffffff
	
.contact-us 
	span
		color #d7e3e7
	
	p
		margin 0
		
.social-media li
	display inline-block
	font-size 2rem
	
.social-media-indent
	padding-left 2.4rem
	
@media screen and (max-width: 1199px)
	.social-media-indent
		padding-left 1.7rem
		
	.view-all
		margin-top 0
	.features-head
		margin-left 0
	.features-list
		padding-left 0
	.sales
		margin-bottom 3rem
		
@media screen and (max-width: 992px)
	.social-media-indent
		padding-left 2.4rem
	.logotype-footer p
		margin-bottom 2rem

	.bootstrap-select:not([class*=col-]):not([class*=form-control]):not(.input-group-btn):last-child
		float right

	.sales-frame-background
		float left
	.view-all
		margin-top 16.5rem
		
@media screen and (max-width: 768px)
	.quick-links-ul
		width 28.2rem
	.padding
		padding-bottom 2.7rem
		margin-left 10rem
	
	.contacts
		width 100%
		float left

	.navbar-collapse
		clear left
		padding-right 15px
		padding-left 15px
	ul.menu
		li
			float none
			width 18rem
			margin-bottom 1rem
			
			&:first-child a
				padding-left 2.2rem
				
			&:last-child a
				padding-right 2.2rem
	.navbar-toggle
		background-color #ffffff
		border 1px solid #acacac
		float left
		margin-right -18rem
		.icon-bar
			background-color #ababab
			margin 0.2rem
		&:hover
			background-color #e8e8e8
		
	.left-arrow, .right-arrow
		display none !important

	.bootstrap-select:not([class*=col-]):not([class*=form-control]):not(.input-group-btn):last-child
		float right
		margin-right 0
	a.blue-bar-search
		float right
		
	.plan
		width 90%
	
	.price-border
		border-width 2px

	.view-all
		margin-top 1.5rem
		float left
	
	.blue-bar-search-bot
		float right
	.input-padding-bot
		padding-right 15px
	
	@media screen and (max-width: 600px)
		.features-list
			column-count 1
			column-gap 0
			padding-left 3rem