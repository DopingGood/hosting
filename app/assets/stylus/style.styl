footer
	width 100%
	padding 10rem 0 4.5rem 0
	background-color #4c515b

	ul li
		list-style-type none
		color #909aad
		line-height 2

.logotype-footer 
	img
		padding-top 6.5rem

	p
		font-family OpenSans-Regular
		color #909aad
